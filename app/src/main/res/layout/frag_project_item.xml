<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <com.labour.lar.widget.RoundImageView
        android:id="@+id/photo_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:type="round"
        app:borderRadius="5dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_right">
            <TextView android:id="@+id/field_1_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_12"
                android:layout_marginTop="3dp"
                android:text="在建"
                android:layout_alignParentRight="true"/>
            <TextView android:id="@+id/field_1_1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="3dp"
                android:text="南苑花园c座"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/field_1_2_tv"
                android:singleLine="true"
                android:ellipsize="end"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/field_2_1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="开工日期" />
            <TextView
                android:id="@+id/field_2_2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="结束日期" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/field_3_1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="上岗人数" />
            <TextView
                android:id="@+id/field_3_2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="累计工时" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/field_r4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/field_4_1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="合同总额" />
            <TextView
                android:id="@+id/field_4_2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="发放总额" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/field_r5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/field_5_1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="比例" />
            <TextView
                android:id="@+id/field_5_2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="3dp"
                android:text="发放比例" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
