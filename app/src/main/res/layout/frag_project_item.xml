<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <com.labour.lar.widget.RoundImageView
        android:id="@+id/photo_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:type="round"
        app:borderRadius="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_right">
            <TextView android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_12"
                android:layout_marginTop="3dp"
                android:text="在建"
                android:layout_alignParentRight="true"/>

            <TextView android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="3dp"
                android:text="南苑花园c座"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/state_tv"
                android:singleLine="true"
                android:ellipsize="end"/>
        </RelativeLayout>

        <TextView android:id="@+id/company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/content"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="3dp"
            android:text="方正通信" />

        <TextView android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/content"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="3dp"
            android:text="写字楼" />

        <TextView android:id="@+id/mianji_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/content"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="3dp"
            android:text="20000m" />
    </LinearLayout>

</LinearLayout>
