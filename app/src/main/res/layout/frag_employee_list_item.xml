<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">
        <RelativeLayout android:id="@+id/field1_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_right"
            android:layout_marginLeft="@dimen/common_margin_left">

            <TextView android:id="@+id/field1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/text_size_16"
                android:text="项目部"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView android:id="@+id/field1_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/text_size_16"
                android:text="共：500人"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/field2_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_right"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginTop="3dp">

            <TextView android:id="@+id/field2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/content2"
                android:textSize="@dimen/text_size_16"
                android:text="项目部"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView android:id="@+id/field2_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content2"
                android:textSize="@dimen/text_size_16"
                android:text="共：500人"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <Button android:id="@+id/btn_examine"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_button"
        android:text="上岗审核"
        android:textSize="@dimen/text_size_14"
        android:layout_marginLeft="@dimen/common_margin_left"/>

    <ImageView android:id="@+id/arraw_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/right_arraw"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"/>
</LinearLayout>
