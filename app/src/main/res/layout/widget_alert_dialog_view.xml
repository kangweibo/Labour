<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minWidth="250dp"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="对话框标题"
        android:textSize="18sp"
        android:textColor="#030303"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4" />

    <TextView
        android:id="@+id/dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lineSpacingMultiplier="1.1"
        android:text="第十二届委员会全体会议和中华全国学生联合会第二十六次代表大会开幕之际"
        android:textSize="16sp"
        android:textColor="#595854" />"

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/cancel_btn"
            style="@style/DialogGreyBtn"
            android:text="@string/cancel" />

        <View
            android:id="@+id/btn_span_v"
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/cancel_btn"
            android:background="@color/white" />

        <Button
            android:id="@+id/ok_btn"
            style="@style/DialogBlueBtn"
            android:layout_toRightOf="@id/btn_span_v"
            android:text="@string/ok"  />
    </RelativeLayout>

</LinearLayout>