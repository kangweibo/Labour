<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minWidth="250dp"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="对话框标题"
        android:textSize="18sp"
        android:textColor="#030303"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4" />

    <EditText
        android:id="@+id/dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:textColor="#595854"
        android:background="@drawable/shape_white_bg_corner_rect"
        android:gravity="start"
        android:padding="5dp"
        android:minHeight="80dp"
        android:inputType="text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/cancel_btn"
            style="@style/DialogGreyBtn"
            android:text="@string/cancel" />

        <View
            android:id="@+id/btn_span_v"
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/cancel_btn"
            android:background="@color/white" />

        <Button
            android:id="@+id/ok_btn"
            style="@style/DialogRedBtn"
            android:layout_toRightOf="@id/btn_span_v"
            android:text="@string/ok"
             />
    </RelativeLayout>

</LinearLayout>