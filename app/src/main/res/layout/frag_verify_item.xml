<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.labour.lar.widget.RoundImageView
            android:id="@+id/photo_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            app:type="round"
            app:borderRadius="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_right">

                <TextView android:id="@+id/txt_field1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_blue"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="3dp"
                    android:text="名字"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView android:id="@+id/txt_field2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_blue"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="3dp"
                    android:text="角色"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_right">

                <TextView android:id="@+id/txt_field3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/title"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="3dp"
                    android:text="手机"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView android:id="@+id/txt_field4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/title"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="3dp"
                    android:text="号码"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView android:id="@+id/txt_field5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="3dp"
                android:text="身份证" />

            <TextView android:id="@+id/txt_field6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="3dp"
                android:text="银行卡" />

            <TextView android:id="@+id/txt_field7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="3dp"
                android:text="考试" />
        </LinearLayout>
    </LinearLayout>

    <Button android:id="@+id/btn_examine"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_button"
        android:text="审核"
        android:textSize="@dimen/text_size_14"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
