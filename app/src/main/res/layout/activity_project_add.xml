<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginVertical="20dp"
        android:lineSpacingMultiplier ="1.2"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="项目名称"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <EditText android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:hint="请输入项目名称"
                android:textColorHint="@color/text_input_tip"
                android:background="@drawable/common_input_bg"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="预算金额"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
            <EditText android:id="@+id/edt_budget"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:hint="请输入预算金额"
                android:textColorHint="@color/text_input_tip"
                android:background="@drawable/common_input_bg"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="工期（天）"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
            <EditText android:id="@+id/edt_project_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:hint="请输入工期"
                android:textColorHint="@color/text_input_tip"
                android:background="@drawable/common_input_bg"
                android:textSize="@dimen/text_size_16"
                android:inputType="number"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="开始时间"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
            <TextView android:id="@+id/txt_start_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@mipmap/tree_ex"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入开始时间"
                android:textColorHint="@color/text_input_tip"
                android:background="@drawable/common_input_bg"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="结束时间"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
            <TextView android:id="@+id/txt_end_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@mipmap/tree_ex"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请选择结束时间"
                android:textColorHint="@color/text_input_tip"
                android:background="@drawable/common_input_bg"
                android:textSize="@dimen/text_size_16"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>

            <Button android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_button"
                android:text="提交"
                android:textSize="@dimen/text_size_16"
                android:layout_marginRight="@dimen/common_margin_right"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>