<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout android:id="@+id/photo_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin_left"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/common_margin_right"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView android:id="@+id/photo_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:layout_centerVertical="true"/>

                <com.labour.lar.widget.RoundImageView
                    android:id="@+id/photo_iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:type="circle"
                    app:borderWidth="1dp"
                    android:background="@drawable/circle_shape"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/common_margin_left"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/common_margin_right"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center_vertical|right"
                    android:text="张三"
                    android:inputType="text"
                    android:textColor="#979797"
                    android:textSize="@dimen/text_size_16"
                    android:enabled="false"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/common_margin_left"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/common_margin_right"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView android:id="@+id/sex_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center_vertical|left"
                    android:inputType="text"
                    android:textColor="#979797"
                    android:textSize="@dimen/text_size_16"
                    android:enabled="false"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/common_margin_left"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/common_margin_right"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center_vertical|right"
                    android:textColor="#979797"
                    android:textSize="@dimen/text_size_16"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/common_margin_left"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/common_margin_right"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="民族"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView android:id="@+id/nation_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center_vertical|right"
                    android:inputType="text"
                    android:textColor="#979797"
                    android:textSize="@dimen/text_size_16"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/common_margin_left"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/common_margin_right"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView android:id="@+id/birthday_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center_vertical|right"
                    android:inputType="text"
                    android:textColor="#979797"
                    android:textSize="@dimen/text_size_16"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/common_margin_left"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/common_margin_right"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <TextView android:id="@+id/address_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center_vertical|right"
                    android:inputType="text"
                    android:textColor="#979797"
                    android:textSize="@dimen/text_size_16"
                    android:enabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>