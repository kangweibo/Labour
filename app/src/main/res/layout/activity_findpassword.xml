<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:background="@drawable/login_input_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/phone_icon"
            android:textSize="@dimen/text_size_16"
            android:textColor="#8a8a8a"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
        <EditText android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:hint="请输入手机号"
            android:textColorHint="@color/text_input_tip"
            android:background="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="10dp"
            android:inputType="phone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:background="@drawable/login_input_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@mipmap/yanzhengma_icon"/>
        <EditText android:id="@+id/verfiyCode_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:hint="请输入验证码"
            android:textColorHint="@color/text_input_tip"
            android:background="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:inputType="phone"
            android:layout_weight="1"/>
        <TextView android:id="@+id/getVerfyCode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/common_blue"
            android:layout_marginRight="10dp"
            android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_right"
        android:background="@drawable/login_input_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:drawableLeft="@mipmap/password_icon"
            android:textColor="#8a8a8a"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <EditText android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:hint="请输入新密码"
            android:textColorHint="@color/text_input_tip"
            android:background="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <Button android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_button"
        android:text="提交"
        android:textSize="@dimen/text_size_16"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginTop="25dp"/>

</LinearLayout>