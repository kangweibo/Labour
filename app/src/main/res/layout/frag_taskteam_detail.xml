<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingHorizontal="10dp"
        android:gravity="center_vertical"
        android:background="@color/common_blue_deep">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginTop="3dp"
                    android:text="开工日期" />
                <TextView
                    android:id="@+id/txt_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginTop="3dp"
                    android:text="结束日期" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_number_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginTop="3dp"
                    android:text="上岗人数" />
                <TextView
                    android:id="@+id/txt_work_hours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginTop="3dp"
                    android:text="累计工时" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_secret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_money_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginTop="3dp"
                        android:text="合同总额" />
                    <TextView
                        android:id="@+id/txt_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginTop="3dp"
                        android:text="发放总额" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_time_scale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginTop="3dp"
                        android:text="时间比例" />
                    <TextView
                        android:id="@+id/txt_money_scale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginTop="3dp"
                        android:text="发放比例" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/tab_viewpager"/>

</LinearLayout>
