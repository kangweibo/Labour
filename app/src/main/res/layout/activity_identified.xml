<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击拍摄身份证正反面"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginRight="@dimen/common_margin_right">
                <ImageView
                    android:id="@+id/photo_zheng_iv"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@mipmap/zhengmian"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"/>
                <TextView android:id="@+id/zheng_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正面"
                    android:textColor="@color/tab_grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginRight="@dimen/common_margin_right">
                <ImageView
                    android:id="@+id/photo_fan_iv"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@mipmap/zhengmian"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"/>

                <TextView android:id="@+id/fan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反面"
                    android:textColor="@color/tab_grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/photo_iv"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:background="@mipmap/zhengmian"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <TextView android:id="@+id/idcard_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"/>

            <Button android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_button"
                android:text="提交"
                android:textSize="@dimen/text_size_16"
                android:layout_marginRight="@dimen/common_margin_right"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="25dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>